/* pages/index/pages/confirmFlight/confirmFlight.wxss */
@import "../common/common.wxss";
page{
  font-size: 28rpx;
}
.p-hd{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:20rpx;
  background: #fff;
  margin-top: 20rpx;
}
.p-hd image{
  width: 40rpx;
  height:40rpx;
  position: relative;
  top: 14rpx;
  margin-left: 10rpx;
}
.p-hd .rotateImg,.p-hd .rotateImgOrder{
  transform:rotate(180deg);
  transition: 0.3s;
}
.p-bd{
  background: #f8f8f8;
  height: 0;
  overflow: hidden;
  margin-top: 20rpx;
}
.showpassenger,.showOrderInfo{
  height: auto;
}
.showpassenger .pd-transform,.showOrderInfo .pd-transform{
  transform: translateY(0);
  transition: 0.3s;
}
.p-bd .pd-transform{
  padding:20rpx;
}
.pd-transform{
  transform: translateY(-50%);
  transition: 0.3s;
}
.pd-transform>view{
  padding:20rpx 0;
}
.pd-transform .p-title{
  background: #f2f2f2;
  padding-left: 20rpx;
}
.totle-price .text-1{
  color:red;
  margin-left: 30rpx;
}
.totle-price .text-2{
  font-size: 40rpx;
  color:red;
  font-weight: bold;
}
.next-step-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  background: #fff;
  padding-left: 20rpx;
}
.next-step-wrap .text-1{
  margin-left: 30rpx;
}
.next-step-wrap .text-2{
  font-size: 40rpx;
}
.next-step-wrap button{
  width: 200rpx;
  margin-right: 0;
  border-radius: 0;
}